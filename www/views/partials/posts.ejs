<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <img class="card-img-top" src="http://via.placeholder.com/350x250/dc3545/550000/?text=350x150+Rocks!" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>

      <p class="card-text"><%= post.content %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-danger">View</button>
          <button type="button" class="btn btn-sm btn-outline-danger">Edit</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
    <div class="card-footer text-muted">
    2 days ago
  </div>
  </div>
</div>
